{
  "name": "geoserver-rest",
  "version": "0.9.0",
  "description": "API for connection between Geoserver and Nodejs",
  "main": "main.js",
  "scripts": {
    "dev": "./node_modules/nodemon/bin/nodemon.js --inspect main.js --exec babel-node",
    "start": "npm run docs && npm run prod",
    "prod": "babel-node main.js",
    "docs": "apidoc -i routes/doc -o public/doc",
    "docker": "npm install --only=production && npm run prod"
  },
  "apidoc": {
    "name": "Documentation of API Geoserver REST",
    "template": {
      "forceLanguage": "en"
    }
  },
  "dependencies": {
    "apidoc": "^0.15.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "body-parser": "^1.17.2",
    "cors": "^2.8.4",
    "express": "^4.15.3",
    "express-validation": "^1.0.2",
    "helmet": "^3.9.0",
    "joi": "^13.0.1",
    "jsonwebtoken": "^8.0.0",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.0",
    "request": "^2.87.0",
    "url": "^0.11.0",
    "winston": "^3.0.0-rc3",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "nodemon": "^1.17.5"
  }
}
